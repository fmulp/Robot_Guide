<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="by.bstu.robotics.guide" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activities.ExcursionsTabActivity"
            android:label="@string/title_activity_excursions_tab" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ShowExcursionActivity"
            android:label="@string/title_activity_show_excursion"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.MoveToExhibitActivity"
            android:label="@string/title_activity_move_to_exhibit" >
        </activity>
    </application>

</manifest>
